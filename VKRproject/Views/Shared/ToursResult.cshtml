@model List<ShortTour>

<style>
    ul {
        list-style-type: none;
    }
</style>

<div>Количество найденных туров: @Model.Count</div>
<div>
    @if(Model != null)
        @if(Model.Count > 0)
        {
            <ul>
                @foreach(var t in Model)
                {
                    <li>
                        <div>
                            <div><img src="@t.ImgLink" /></div>
                            <label>Название: @t.Name</label>
                            <label>Город: <a href="~/InfoModel/InfoCity?id=@t.City.ID">@t.City.Name</a></label>
                            <label>Отель: <a href="~/InfoModel/InfoHotel?id=@t.Hotel.ID">@t.Hotel.Name (@t.Hotel.Category)</a></label>
                            <label>Дата вылета: @t.DateStart</label>
                            <label>Дата вылета обратно: @t.DateFinish</label>
                            <div>@t.Price</div>
                            <div><button href="~/InfoModel/InfoTour?id=@t.ID">Описание тура</button></div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>

